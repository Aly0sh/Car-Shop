<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mycars.MyCarsFragment"
    android:background="@drawable/frame_style"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/car_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/my_car_item_layout"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <TextView
        android:id="@+id/empty"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Список ваших машин пуст"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/car_recycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:textFontWeight="800"
        android:textColor="#202020"
        android:visibility="gone"/>

    <Button
        android:id="@+id/addCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/simple_button"
        android:paddingHorizontal="25dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>